public boolean onTouchEvent(MotionEvent event) {
	int e = event.getAction();
	switch(e){
				case MotionEvent.ACTION_DOWN:

					this.downX = event.getX();
					this.downY = event.getY();
					this.cnv.drawPoint(this.downX, this.downY, this.p);

					this.invalidate();

					break;

				case MotionEvent.ACTION_MOVE:
					this.upX = event.getX();
					this.upY = event.getY();

					this.cnv.drawLine(this.downX, this.downY, this.upX, this.upY, this.p);
					this.invalidate();

					this.downX = this.upX;
					this.downY = this.upY;

					break;

				case MotionEvent.ACTION_UP:
					this.upX = event.getX();
					this.upY = event.getY();

					this.invalidate();

					break;

				case MotionEvent.ACTION_CANCEL:
					this.invalidate();
					break;
				}

			}